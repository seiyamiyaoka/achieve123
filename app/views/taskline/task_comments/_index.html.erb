  <tbody>
    <% task_comments.each do |task_comment| %>
      <tr>
        <% unless task_comment.id.nil? %>
          <td><%= task_comment.user.name %></td>
          <td><%= task_comment.task %></td>
          <td><%= task_comment.content %></td>
          <td><%= link_to 'Show', taskline_task_comment_path(task_comment) %></td>
          <td><%= link_to 'Edit', edit_taskline_task_comment_path(task_comment.task_id, task_comment) %></td>
          <td><%= link_to 'Destroy', taskline_task_comment_path(task_comment), method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
