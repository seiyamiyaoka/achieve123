<h1>商品一覧</h1>
<% @products.each do |product| %>
<table>
  <tr>
    <td><%= product.id  %></td>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= product.released_on %></td>
    <td><%= product.manufacture.name %></td>
  </tr>
</table>
<% end %>
<p>
  ダウンロード:
  <%= link_to "CSV", products_path(format: "csv") %>
  |
  <%= link_to "Excel", products_path(format: "xls") %>
</p>
