<%= form_for @contact,url: contact_thankyou_path do |f| %>
  
<%= f.hidden_field :name %>
  <%= f.label :名前,:class => "required-blue" %>
<p><%= @contact.name %></p>  
  
  <%= f.label :メールアドレス,:class => "required-blue" %>
<%= f.hidden_field :email %>
<p><%= @contact.email %></p>

  <%= f.label :住所,:class => "required-blue" %>
<%= f.hidden_field :addres %>
<p><%= @contact.addres %></p>

  <%= f.label :電話番号,:class => "required-blue" %>
  <%= f.hidden_field :number %>
  <p><%= @contact.number %></p>
  
  <%= f.label :お問い合わせ内容,:class => "required-blue" %>
<%= f.hidden_field :content %>
<p><%= @contact.content %></p>
  
<%= f.submit "送信" %>
  
<%= f.submit "戻る",name: 'back' %>

<% end %>