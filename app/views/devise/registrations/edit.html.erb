
<div class="middlePage">
  <h2><%= @user.name %>さん</h2>
<div class="page-header">
  <h1 class="logo"><small></small></h1>
</div>
  <div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"></h3>
  </div>
  <div class="panel-body">



<%= devise_error_messages! %>
  <div class="row">
    <div class="">
    <div class="thumbnail"><%= image_for(@user) %></div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

<!--  -->


<div class="field">
    <%= f.label :ユーザ名 %><br />
  <%= f.text_field :name, autofocus: true %>
  </div>
    <div class="field">
      <%= f.label :プロフィール画像 %><br />
      <%= f.file_field :image_url, autofocus: true %>
  </div>
    <% if @user.provider == "facebook" || @user.provider == "twitter"%>
    <% else %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
    <% end %>
    <%= f.submit "更新" %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
<% end %>

<h3>登録解除</h3>

<p>ご利用ありがとうございました。<%= button_to "登録解除", registration_path(resource_name), data: { confirm: "一度削除すると復元できませんがよろしいでしょうか？" }, method: :delete %></p>

<%= link_to "戻る", :back %>
<%= image_tag(current_user.profile_image_url) %>
